<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       name="auv">

        <link name="odom" />

        <link name="base_link">
                <origin xyz="0 0 0"
                        rpy="0 0 0" />
        </link>

        <link name="thruster_1">
                <origin xyz="0 0 0"
                        rpy="0 0 0" />
        </link>

        <link name="thruster_2">
                <origin xyz="0 0 0"
                        rpy="0 0 0" />
        </link>

        <link name="thruster_3">
                <origin xyz="0 0 0"
                        rpy="0 0 0" />
        </link>

        <link name="thruster_4">
                <origin xyz="0 0 0"
                        rpy="0 0 0" />
        </link>

        <link name="thruster_5">
