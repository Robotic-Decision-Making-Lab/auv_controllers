                        rpy="0 0 0" />
        </link>

        <link name="thruster_8">
                <origin xyz="0 0 0"
                        rpy="0 0 0" />
        </link>

        <!-- Cartesian Joints -->
        <joint name="x"
               type="continuous">
                <parent link="odom" />
                <child link="base_link" />
        </joint>

        <joint name="y"
               type="continuous">
                <parent link="odom" />
                <child link="base_link" />
        </joint>

        <joint name="z"
               type="continuous">
                <parent link="odom" />
                <child link="base_link" />
        </joint>

        <joint name="rx"
               type="continuous">
                <parent link="odom" />
                <child link="base_link" />
        </joint>

        <joint name="ry"
               type="continuous">
                <parent link="odom" />
                <child link="base_link" />
        </joint>

        <joint name="rz"
               type="continuous">
                <parent link="odom" />
                <child link="base_link" />
        </joint>

        <!-- Thruster joints -->
        <joint name="thruster_1_joint"
               type="continuous"
               ccw="true">
                <origin rpy="-1.571 1.571 -0.785"
                        xyz="0.14 -0.092 0.0" />
                <parent link="base_link" />
                <child link="thruster_1" />
                <axis xyz="0 0 -1" />
        </joint>

        <joint name="thruster_2_joint"
               type="continuous"
               ccw="true">
                <origin rpy="-1.571 1.571 -2.356"
                        xyz="0.14 0.092 0.0" />
                <parent link="base_link" />
                <child link="thruster_2" />
                <axis xyz="0 0 -1" />
        </joint>

        <joint name="thruster_3_joint"
               type="continuous"
               ccw="false">
                <origin rpy="-1.571 1.571 0.785"
                        xyz="-0.15 -0.092 0.0" />
                <parent link="base_link" />
                <child link="thruster_3" />
                <axis xyz="0 0 -1" />
        </joint>

        <joint name="thruster_4_joint"
               type="continuous"
               ccw="false">
                <origin rpy="-1.571 1.571 2.356"
                        xyz="-0.15 0.092 0.0" />
                <parent link="base_link" />
                <child link="thruster_4" />
                <axis xyz="0 0 -1" />
        </joint>

        <joint name="thruster_5_joint"
