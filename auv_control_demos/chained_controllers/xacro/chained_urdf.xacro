                <axis xyz="0 0 -1" />
        </joint>

        <joint name="thruster_7_joint"
               type="continuous"
               ccw="false">
                <origin rpy="0 0 0"
                        xyz="-0.118 -0.215 0.064" />
                <parent link="base_link" />
                <child link="thruster_7" />
                <axis xyz="0 0 -1" />
